{% extends "base.twig" %}

{% block content %}
<div class="container">
	<div class="row">
		<article class="post-type-{{post.post_type}} col-12 col-md-12" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div>
</div>
{% endblock %}
